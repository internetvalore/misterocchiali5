<style>
  .contact {
    background-color: var(--background-alt);
    padding: 4rem 0;
  }

  .section-header {
    text-align: center;
    margin-bottom: 3rem;
  }

  .section-header h2 {
    font-size: 2.5rem;
    color: var(--text-dark);
  }

  .divider {
    height: 4px;
    width: 60px;
    background-color: var(--secondary);
    margin: 0 auto;
  }

  .contact-content {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 3rem;
  }

  .contact-info {
    background-color: white;
    padding: 2rem;
    border-radius: 8px;
    box-shadow: 0 5px 15px rgba(0, 0, 0, 0.05);
  }

  .contact-info h3 {
    font-size: 1.8rem;
    margin-bottom: 1.5rem;
    color: var(--primary-dark);
  }

  .info-item {
    display: flex;
    margin-bottom: 1.5rem;
    align-items: flex-start;
  }

  .icon {
    font-size: 1.5rem;
    margin-right: 1rem;
    color: var(--secondary);
  }

  .info-item h4 {
    font-size: 1.2rem;
    margin-bottom: 0.3rem;
    color: var(--text-dark);
  }

  .map-container {
    border-radius: 8px;
    overflow: hidden;
    box-shadow: 0 5px 15px rgba(0, 0, 0, 0.05);
    height: 100%;
  }

  .map-container iframe {
    width: 100%;
    height: 100%;
    min-height: 350px;
  }

  @media (max-width: 992px) {
    .contact-content {
      grid-template-columns: 1fr;
    }

    .section-header h2 {
      font-size: 2rem;
    }
    
    .map-container {
      height: 350px;
    }
  }
</style>
