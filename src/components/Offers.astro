<style>
  .offers {
    background-color: var(--background-alt);
  }

  .section-header {
    text-align: center;
    margin-bottom: 3rem;
  }

  .section-header h2 {
    font-size: 2.5rem;
    color: var(--text-dark);
  }

  .divider {
    height: 4px;
    width: 60px;
    background-color: var(--secondary);
    margin: 0 auto;
  }

  .offers-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: 2rem;
    margin-bottom: 2rem;
  }

  .offer-card {
    background-color: white;
    border-radius: 8px;
    padding: 2rem;
    text-align: center;
    box-shadow: 0 5px 15px rgba(0, 0, 0, 0.05);
    position: relative;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }

  .offer-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 15px 30px rgba(0, 0, 0, 0.1);
  }

  .featured {
    border: 2px solid var(--secondary);
    transform: scale(1.05);
  }

  .featured:hover {
    transform: scale(1.05) translateY(-5px);
  }

  .offer-badge {
    position: absolute;
    top: -10px;
    right: -10px;
    background-color: var(--secondary);
    color: white;
    padding: 0.5rem 1rem;
    border-radius: 20px;
    font-weight: 600;
    font-size: 0.9rem;
  }

  .offer-icon {
    font-size: 3rem;
    margin-bottom: 1rem;
  }

  .offer-card h3 {
    font-size: 1.5rem;
    margin-bottom: 1rem;
    color: var(--primary-dark);
  }

  .price {
    font-size: 1.2rem;
    margin-bottom: 1rem;
  }

  .price span {
    font-size: 1.8rem;
    font-weight: 700;
    color: #FF8C00; /* Arancione invece di var(--primary) */
  }

  .offer-details {
    margin-top: 1.5rem;
    text-align: left;
  }

  .offer-details ul {
    list-style: none;
  }

  .offer-details li {
    margin-bottom: 0.5rem;
    position: relative;
    padding-left: 1.5rem;
  }

  .offer-details li:before {
    content: "‚úì";
    color: var(--secondary);
    position: absolute;
    left: 0;
    font-weight: bold;
  }

  .offers-note {
    text-align: center;
    font-size: 0.9rem;
    opacity: 0.7;
  }

  @media (max-width: 768px) {
    .section-header h2 {
      font-size: 2rem;
    }

    .featured {
      transform: none;
    }

    .featured:hover {
      transform: translateY(-5px);
    }
  }
</style>
