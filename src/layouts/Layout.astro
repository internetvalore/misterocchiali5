<style is:global>
	:root {
		--primary: #1a73e8;
		--primary-dark: #0d47a1;
		--secondary: #ff6b00;
		--text-dark: #333333;
		--text-light: #666666;
		--background: #ffffff;
		--background-alt: #f5f5f5;
	}
	* {
		margin: 0;
		padding: 0;
		box-sizing: border-box;
	}
	html {
		font-family: 'Montserrat', sans-serif;
		scroll-behavior: smooth;
	}
	body {
		background: var(--background);
		color: var(--text-dark);
		line-height: 1.6;
	}
	img {
		max-width: 100%;
		height: auto;
		display: block;
	}
	a {
		color: inherit;
		text-decoration: none;
	}
	.container {
		width: 100%;
		max-width: 1200px;
		margin: 0 auto;
		padding: 0 1.5rem;
	}
	.btn {
		display: inline-block;
		padding: 0.8rem 1.5rem;
		background-color: var(--secondary);
		color: white;
		font-weight: 600;
		border-radius: 4px;
		transition: all 0.3s ease;
		border: none;
		cursor: pointer;
		text-align: center;
	}
	.btn:hover {
		background-color: #e05c00;
		transform: translateY(-2px);
	}
	section {
		padding: 4rem 0;
	}
	h1, h2, h3, h4, h5, h6 {
		line-height: 1.2;
		margin-bottom: 1rem;
	}
	p {
		margin-bottom: 1rem;
	}
	@media (max-width: 768px) {
		section {
			padding: 3rem 0;
		}
	}
</style>
